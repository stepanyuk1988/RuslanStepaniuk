function day() {
    var num = document.getElementById("number").value;
    num = parseFloat(num);
    switch (num) {
        case 1:
            document.getElementById("result").innerHTML = `День недели: понедельник`;
            break;
        case 2:
            document.getElementById("result").innerHTML = `День недели: вторник`;
            break;
        case 3:
            document.getElementById("result").innerHTML = `День недели: среда`;
            break;
        case 4:
            document.getElementById("result").innerHTML = `День недели: четверг`;
            break;
        case 5:
            document.getElementById("result").innerHTML = `День недели: пятница`;
            break;
        case 6:
            document.getElementById("result").innerHTML = `День недели: суббота`;
            break;
        case 7:
            document.getElementById("result").innerHTML = `День недели: воскресенье`;
            break;
        default:
            document.getElementById("result").innerHTML = `Введите целое число от 1 до 7`;
            break;
    }
}
